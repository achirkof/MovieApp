<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#3B3B4D"
                android:startColor="#636375"
                android:type="linear" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#222232" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>